@model NSE.WebApp.MVC.Models.ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
}

@{
    if(Model == null)
    {
        <div>
            <h2>Ops! Ocorreu um erro, mas não se preocupe. Nossa time será avisado e irmos corrir em breve!</h2>
        </div>
    }
    else
    {
        <div>
            <h2>@Html.Raw(Model.Message)</h2>
        </div>
    }
}